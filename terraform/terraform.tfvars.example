# AWS Configuration
aws_region = "us-east-1"

# VPC Configuration
# Set create_vpc = true to create a new VPC, or false to use an existing one
create_vpc = false

# If create_vpc = false, provide existing VPC resources:
vpc_id           = "vpc-xxxxxxxxx"        # Your existing VPC ID
subnet_id        = "subnet-xxxxxx"        # Your existing subnet ID
security_group_id = "sg-xxxxxxxxx"        # Your existing security group ID

# Instance Configuration
instance_count = 5
instance_type  = "t3.micro"

# Optional: Specify a custom AMI (Amazon Linux 2 example shown)
# ami = "ami-0c02fb55956c7d316"

# Environment
environment = "production"
project_name = "ip-allocation"

# Tags
tags = {
  ManagedBy = "Terraform"
  Project   = "ip-allocation"
  Owner     = "DevOps"
}
